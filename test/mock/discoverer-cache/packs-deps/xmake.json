{
  "schemaVersion": "0.2.0",
  "description": "Test the auto discovery mechanism for xPacks",
  "addSourceFolders": [
    "./src2"
  ],
  "addIncludeFolders": [
    "./include2"
  ],
  "generator": "make",
  "commands": {
    "build": [ "make" ]
  },
  "artefact": {
    "type": "executable",
    "name": "${test.name}"
  },
  "targetPlatforms": {
    "posix": {
    }
  },
  "toolchains": {
    "xgcc": {}
  },
  "profiles": {
    "debug": {
    },
    "release": {
    },
    "trace": {
    }
  },
  "buildConfigurations": {
    "posix-gcc-debug": {
      "targetPlatform": "posix",
      "toolchain": "xgcc",
      "profiles": [ "debug", "trace" ]
    },
    "posix-gcc-release": {
      "targetPlatform": "posix",
      "toolchain": "xgcc",
      "profiles": [ "release" ]
    }
  }
}
