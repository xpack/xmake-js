{
  "schemaVersion": "0.2.0",
  "description": "Default toolchain definitions. Uses the same schema as xmake.json.",
  "toolchains": {
    "base": {
      "commandPrefix": "",
      "commandSuffix": "",
      "descriptionPrefix": "",
      "objectExtension": "o",
      "makeObjectsVariable": "OBJS",
      "configurationSuffixes": [
        "Architecture",
        "Debugging",
        "Optimizations",
        "Warnings",
        "Miscellaneous"
      ],
      "tools": {
        "cCompiler": {
          "commandName": "cc",
          "description": "C Compiler",
          "type": "compiler",
          "prefix": "c",
          "languages": [
            "c",
            "c++"
          ],
          "configurationSuffixes": [
            "Architecture",
            "Debugging",
            "Optimizations",
            "Warnings",
            "Miscellaneous"
          ]
        },
        "cppCompiler": {
          "commandName": "c++",
          "description": "C++ Compiler",
          "type": "compiler",
          "prefix": "cxx",
          "languages": [
            "c++"
          ],
          "configurationSuffixes": [
            "Architecture",
            "Debugging",
            "Optimizations",
            "Warnings",
            "Miscellaneous"
          ]
        },
        "assembler": {
          "commandName": "as",
          "description": "Assembler",
          "type": "assembler",
          "prefix": "as",
          "languages": [
            "c",
            "c++",
            "as"
          ],
          "configurationSuffixes": [
            "Architecture",
            "Debugging",
            "Optimizations",
            "Warnings",
            "Miscellaneous"
          ]
        },
        "cLinker": {
          "commandName": "ld",
          "description": "C Linker",
          "type": "linker",
          "prefix": "ld",
          "languages": [
            "c",
            "as"
          ],
          "configurationSuffixes": [
            "Architecture",
            "Debugging",
            "Optimizations",
            "Warnings",
            "Miscellaneous"
          ]
        },
        "cppLinker": {
          "commandName": "ld",
          "description": "C++ Linker",
          "type": "linker",
          "prefix": "ldxx",
          "languages": [
            "c++"
          ],
          "configurationSuffixes": [
            "Architecture",
            "Debugging",
            "Optimizations",
            "Warnings",
            "Miscellaneous"
          ]
        },
        "archiver": {
          "commandName": "ar",
          "description": "Archiver",
          "type": "archiver",
          "prefix": "ar",
          "languages": [
            "c",
            "c++",
            "as"
          ],
          "configurationSuffixes": []
        }
      }
    },
    "gcc": {
      "parent": "base",
      "descriptionPrefix": "GNU",
      "description": "GCC",
      "tools": {
        "cCompiler": {
          "commandName": "gcc",
          "options": "-c",
          "deps": "-MMD -MP -MF '${node.relativePath}.d'",
          "outputFlag": "-o",
          "output": "'${node.relativePath}.${toolchain.objectExtension}'",
          "inputs": "'${node.buildRelativePath}'",
          "fileExtensions": {
            "c": {
              "prefix": "C"
            }
          }
        },
        "cppCompiler": {
          "commandName": "g++",
          "options": "-c",
          "deps": "-MMD -MP -MF '${node.relativePath}.d'",
          "outputFlag": "-o",
          "output": "'${node.relativePath}.${toolchain.objectExtension}'",
          "inputs": "'${node.buildRelativePath}'",
          "fileExtensions": {
            "cpp": {
              "prefix": "CPP"
            },
            "C": {
              "prefix": "C_UPPER"
            },
            "c++": {
              "prefix": "C++"
            },
            "cxx": {
              "prefix": "CXX"
            },
            "cc": {
              "prefix": "CC"
            }
          }
        },
        "assembler": {
          "commandName": "gcc",
          "options": "-x assembler-with-cpp -c",
          "deps": "-MMD -MP -MF '${node.relativePath}.d'",
          "outputFlag": "-o",
          "output": "'${node.relativePath}.${toolchain.objectExtension}'",
          "inputs": "'${node.buildRelativePath}'",
          "fileExtensions": {
            "S": {
              "prefix": "S_UPPER"
            },
            "asm": {
              "prefix": "ASM"
            }
          }
        },
        "cLinker": {
          "commandName": "gcc",
          "outputFlag": "-o",
          "output": "'${artefact.fullName}'"
        },
        "cppLinker": {
          "commandName": "g++",
          "outputFlag": "-o",
          "output": "'${artefact.fullName}'"
        },
        "archiver": {
          "output": "'${artefact.fullName}'"
        }
      }
    },
    "clang": {
      "parent": "gcc",
      "objectExtension": "bc",
      "makeObjectsVariable": "BCS",
      "descriptionPrefix": "LLVM",
      "description": "clang",
      "todo": "Copy properties from GCC",
      "tools": {
        "cCompiler": {
          "commandName": "clang"
        },
        "cppCompiler": {
          "commandName": "clang++"
        },
        "assembler": {
          "commandName": "clang"
        },
        "cLinker": {
          "commandName": "clang"
        },
        "cppLinker": {
          "commandName": "clang++"
        },
        "archiver": {
          "output": "'${artefact.fullName}'"
        }
      }
    },
    "arm-none-eabi-gcc": {
      "parent": "gcc",
      "descriptionPrefix": "GNU ARM Cross",
      "commandPrefix": "arm-none-eabi-"
    },
    "riscv-none-embed-gcc": {
      "parent": "gcc",
      "descriptionPrefix": "GNU MCU RISC-V Cross",
      "commandPrefix": "riscv-none-embed-"
    }
  }
}