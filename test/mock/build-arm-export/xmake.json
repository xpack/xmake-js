{
  "schemaVersion": "0.2.0",
  "targetPlatforms": {
    "stm32f4-discovery": {
      "targetArtefact": {
        "extension": "elf"
      },
      "addPreprocessorSymbols": [
        "STM32F407xx",
        "HSE_VALUE=8000000",
        "USE_HAL_DRIVER"
      ],
      "toolchainsOptions": {
        "arm-none-eabi-gcc": {
          "addArchitecture": [
            "-mcpu=cortex-m4",
            "-mthumb",
            "-mfloat-abi=soft"
          ],
          "toolsOptions": {
            "cppLinker": {
              "addLibraryFolders": [
                "ldscripts"
              ],
              "addLinkerScripts": [
                "libs.ld",
                "mem-stm32f407.ld",
                "${build.relativePath}/ldscripts/sections.ld"
              ],
              "addMiscellaneous": [
                "--specs=rdimon.specs",
                "--specs=nano.specs",
                "-Wl,--gc-sections",
                "-Wl,-Map,'map.txt'"
              ]
            }
          }
        }
      }
    },
    "stm32f0discovery": {
      "targetArtefact": {
        "extension": "elf"
      },
      "addPreprocessorSymbols": [
        "STM32F051xx",
        "HSE_VALUE=8000000",
        "USE_HAL_DRIVER"
      ],
      "toolchainsOptions": {
        "arm-none-eabi-gcc": {
          "addArchitecture": [
            "-mcpu=cortex-m0",
            "-mthumb",
            "-mfloat-abi=soft"
          ],
          "toolsOptions": {
            "cppLinker": {
              "addLibraryFolders": [
                "ldscripts"
              ],
              "addLinkerScripts": [
                "libs.ld",
                "mem-stm32f051.ld",
                "sections.ld"
              ],
              "addMiscellaneous": [
                "--specs=rdimon.specs",
                "--specs=nano.specs",
                "-Wl,--gc-sections",
                "-Wl,-Map,'map.txt'"
              ]
            }
          }
        }
      }
    },
    "posix": {
    }
  },
  "addSourceFolders": [
    "src",
    "xyz/src"
  ],
  "addIncludeFolders": [
    "include",
    "xyz/include"
  ],
  "addIncludeSystemFolders": [
    "sys-include"
  ],
  "addIncludeFiles": [
    "include/file.h"
  ],
  "toolchainsOptions": {
    "gcc": {
      "addWarnings": [
        "-Wall",
        "-Wextra",
        "-Wunused",
        "-Wuninitialized",
        "-Wmissing-declarations",
        "-Wconversion",
        "-Wpointer-arith",
        "-Wshadow",
        "-Waggregate-return",
        "-Wfloat-equal"
      ],
      "addOptimizations": [
        "-fmessage-length=0",
        "-fsigned-char",
        "-ffunction-sections",
        "-fdata-sections"
      ],
      "addDebugging": [
        "-g3"
      ],
      "toolsOptions": {
        "cCompiler": {
          "addOptimizations": [
            "-std=gnu11"
          ],
          "addWarnings": [
            "-Wstrict-prototypes",
            "-Wbad-function-cast",
            "-Wconversion",
            "-Wsign-conversion",
            "-Wunused-parameter",
            "-Wsign-compare",
            "-Wmissing-prototypes",
            "-Wmissing-declarations"
          ]
        },
        "cppCompiler": {
          "addOptimizations": [
            "-std=gnu++11"
          ],
          "addWarnings": [
            "-Wabi",
            "-Wctor-dtor-privacy",
            "-Wnon-virtual-dtor",
            "-Wsign-promo"
          ]
        }
      }
    },
    "arm-none-eabi-gcc": {
      "addOptimizations": [
        "-fno-move-loop-invariants",
        "-ffreestanding"
      ],
      "addWarnings": [
        "-Wlogical-op"
      ],
      "toolsOptions": {
        "cppCompiler": {
          "addOptimizations": [
            "-fabi-version=0",
            "-fno-exceptions",
            "-fno-rtti",
            "-fno-use-cxa-atexit",
            "-fno-threadsafe-statics"
          ],
          "addWarnings": [
            "-Wnoexcept",
            "-Wstrict-null-sentinel"
          ]
        }
      }
    }
  },
  "optionGroups": {
    "debug": {
      "addPreprocessorSymbols": [
        "DEBUG",
        "USE_FULL_ASSERT"
      ],
      "toolchainsOptions": {
        "gcc": {
          "addOptimizations": [
            "-O0"
          ]
        }
      }
    },
    "trace": {
      "addPreprocessorSymbols": [
        "TRACE",
        "OS_USE_TRACE_SEMIHOSTING_DEBUG"
      ]
    },
    "release": {
      "addPreprocessorSymbols": [
        "NDEBUG"
      ],
      "toolchainsOptions": {
        "gcc": {
          "addOptimizations": [
            "-Os"
          ]
        }
      }
    }
  },
  "folders": {
    "xyz/src": {
      "addPreprocessorSymbols": [
        "XYZ"
      ],
      "toolchainsOptions": {
        "gcc": {
          "addWarnings": [
            "-Wformat"
          ],
          "toolsOptions": {
            "cCompiler": {
              "addWarnings": [
                "-Wformat-nonliteral"
              ]
            }
          }
        }
      }
    }
  },
  "files": {
    "xyz/src/xyz.c": {
      "addPreprocessorSymbols": [
        "XYZ_C"
      ],
      "toolchainsOptions": {
        "gcc": {
          "addWarnings": [
            "-Wformat-truncation"
          ],
          "toolsOptions": {
            "cCompiler": {
              "addWarnings": [
                "-Wformat-y2k"
              ]
            }
          }
        }
      }
    }
  },
  "buildConfigurations": {
    "debug-f4": {
      "targetPlatform": "stm32f4-discovery",
      "toolchain": "arm-none-eabi-gcc",
      "optionGroups": [
        "debug",
        "trace"
      ],
      "folders": {
        "xyz/src": {
          "addPreprocessorSymbols": [
            "XYZ_CFG"
          ],
          "toolchainsOptions": {
            "gcc": {
              "addWarnings": [
                "-Wformat-security"
              ],
              "toolsOptions": {
                "cCompiler": {
                  "addWarnings": [
                    "-Wformat-signedness"
                  ]
                }
              }
            }
          }
        }
      },
      "files": {
        "xyz/src/xyz.c": {
          "addPreprocessorSymbols": [
            "XYZ_C_CFG"
          ],
          "toolchainsOptions": {
            "gcc": {
              "addWarnings": [
                "-Wnonnull"
              ],
              "toolsOptions": {
                "cCompiler": {
                  "addWarnings": [
                    "-Wnonnull-compare"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "release-f4": {
      "targetPlatform": "stm32f4-discovery",
      "toolchain": "arm-none-eabi-gcc",
      "optionGroups": [
        "release"
      ]
    }
  }
}